# Smart Parking Lot System - Environment Configuration
# Copy this file to .env and update with your actual values

# ==================== SERVER CONFIGURATION ====================
# Server port
NODE_ENV=development
PORT=3000
HOST=localhost

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1

# ==================== DATABASE CONFIGURATION ====================
# MongoDB connection
MONGODB_URI=mongodb://localhost:27017/smart_parking_lot
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin
MONGODB_POOL_SIZE=10
MONGODB_CONNECT_TIMEOUT=30000
MONGODB_SOCKET_TIMEOUT=30000

# Database name (used if not in MONGODB_URI)
DB_NAME=smart_parking_lot

# ==================== AUTHENTICATION ====================
# Bearer token secret (for JWT if needed)
AUTH_SECRET=your-secret-key-change-in-production
AUTH_TOKEN_EXPIRY=24h

# ==================== RATE LIMITING ====================
# Rate limiter configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# ==================== LOGGING ====================
# Logging level: ERROR, WARN, INFO, DEBUG
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14

# ==================== CACHING ====================
# Redis cache configuration (optional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_CACHE_TTL=300

# ==================== PARKING LOT CONFIGURATION ====================
# Default parking lot settings
PARKING_LOT_NAME=Smart Parking Lot System
TOTAL_FLOORS=3
TOTAL_SPOTS=200

# Spot counts by type
MOTORCYCLE_SPOTS=50
CAR_SPOTS=125
BUS_SPOTS=25

# ==================== PRICING CONFIGURATION ====================
# Motorcycle rates (USD per hour)
MOTORCYCLE_HOURLY_RATE=5.00
MOTORCYCLE_DAILY_MAX=30.00
MOTORCYCLE_GRACE_PERIOD=15

# Car rates (USD per hour)
CAR_HOURLY_RATE=8.00
CAR_DAILY_MAX=50.00
CAR_GRACE_PERIOD=15

# Bus rates (USD per hour)
BUS_HOURLY_RATE=15.00
BUS_DAILY_MAX=100.00
BUS_GRACE_PERIOD=15

# Rounding strategy for fee calculation (CEILING, FLOOR, ROUND)
FEE_ROUNDING_STRATEGY=CEILING

# ==================== PAYMENT CONFIGURATION ====================
# Supported payment methods
PAYMENT_METHODS=CASH,CARD,MOBILE,PREPAID

# Payment gateway (if integrated)
PAYMENT_GATEWAY_ENABLED=false
PAYMENT_GATEWAY_API_KEY=
PAYMENT_GATEWAY_SECRET=

# ==================== EXTERNAL SERVICES ====================
# Email service (for notifications)
EMAIL_SERVICE_ENABLED=false
EMAIL_SERVICE_PROVIDER=sendgrid
EMAIL_SERVICE_API_KEY=
EMAIL_FROM=noreply@smartparkinglot.com

# SMS service (for alerts)
SMS_SERVICE_ENABLED=false
SMS_SERVICE_PROVIDER=twilio
SMS_SERVICE_API_KEY=
SMS_SERVICE_PHONE=

# ==================== MONITORING & ANALYTICS ====================
# Application performance monitoring
APM_ENABLED=false
APM_SERVICE_NAME=smart-parking-lot
APM_SERVER_URL=

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=google-analytics
ANALYTICS_TRACKING_ID=

# ==================== SECURITY ====================
# CORS configuration
CORS_ENABLED=true
CORS_ORIGIN=*
CORS_CREDENTIALS=true

# Security headers
HELMET_ENABLED=true

# ==================== FEATURES ====================
# Feature flags
FEATURE_ENTRY_EXIT_LOGGING=true
FEATURE_REAL_TIME_AVAILABILITY=true
FEATURE_PREDICTIVE_PRICING=false
FEATURE_MOBILE_APP_SUPPORT=false

# ==================== MAINTENANCE ====================
# Database backup
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * * # 2 AM daily
BACKUP_RETENTION_DAYS=30

# ==================== DEVELOPMENT ====================
# Development tools
CORS_DEBUG_ENABLED=false
REQUEST_LOGGING_ENABLED=true
RESPONSE_LOGGING_ENABLED=true
ERROR_STACK_TRACE_ENABLED=true

# Database seeding (development only)
SEED_DATABASE=false
SEED_WITH_TEST_DATA=false
